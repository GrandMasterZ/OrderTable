{% extends 'base2.html.twig' %}

{% block body %}

    <div class="container">
        <div class="jumbotron">
            {% if orders is defined %}
            <div class="row">
                <h1> Your orders </h1>
                {% for order in orders %}
                    <div class="well col-md-4">
                        {{ order.startTime | date("Y/m/d H:i") }}
                        {{ order.user.username }}
                        Table seats: {{ order.table.seats }}
                        <h2> Meals </h2>
                        <ul style="height: 100px;">
                        {% for meal in order.meals %}
                            <li> {{ meal.title }} - {{ meal.price }} </li>
                        {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
            {% else %}
                <div class="row">
                    <h1> No orders to show... </h1>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}