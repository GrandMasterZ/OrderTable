{% extends 'base2.html.twig' %}

{% block body %}

    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <h2> Meal form </h2>
                {% if form_errors(form.title) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form.title) }}
                    </div>
                {% endif %}

                {% if form_errors(form.price) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form.price) }}
                    </div>
                {% endif %}

                <div class="col-md-3">
                    {{ form_start(form) }}
                    {{ form_widget(form.title, { 'attr': { 'class': 'form-control', 'placeholder' : 'Enter title' } }) }}
                    <br>
                    {{ form_widget(form.price, { 'attr': { 'class': 'form-control', 'placeholder' : 'Enter price' } }) }}
                    <br>
                    {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-primary' } }) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-md-9">
                    <div class="count">
                        Total meals: {{ mealsPagination.getTotalItemCount }}
                    </div>
                    <h2> Meal list </h2>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for meal in mealsPagination %}
                            <tr>
                                <td>{{ meal.title }}</td>
                                <td>{{ meal.price }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(mealsPagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}